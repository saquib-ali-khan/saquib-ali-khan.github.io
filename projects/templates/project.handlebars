{{#each this}}
    <div class="col s12 l6 projectHolder">
        <div class="card">
            <div class="hoverable">
                <div class="card-content">
                    <span class="card-title truncate">{{gsx$projecttitle.$t}}</span>
                    <p class="truncate">
                        {{gsx$desc.$t}}
                    </p>
                    <p class="light truncate">
                        <em><strong>Keywords: </strong>{{{gsx$tags.$t}}}</em>
                    </p>
                </div>
                <div class="card-action">
                    <a class="modal-trigger waves-effect waves-light btn deep-orange" href="#{{gsx$id.$t}}"><i
                            class="material-icons left">info</i>Details</a>
                    {{#if gsx$link.$t}}
                        <a target="_blank" href="{{gsx$link.$t}}" class="waves-effect waves-light btn deep-orange"><i
                                class="material-icons left">tab</i>Repository</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="{{gsx$id.$t}}" class="modal">
        <!--<div id="{{gsx$id.$t}}" class="modal modal-fixed-footer">-->
        <div class="modal-content">
            <h5>{{gsx$projecttitle.$t}}</h5>
            <h6>{{gsx$subtitle.$t}}</h6>
            <hr/>
            {{#each tags}}
                <div class="chip">
                    {{this}}
                </div>
            {{/each}}
            <hr/>
            {{#if gsx$link.$t}}
                <a target="_blank" href="{{gsx$link.$t}}" class="waves-effect waves-light"><i
                        class="material-icons left">tab</i>Repository</a>
            {{/if}}
            <p class="justify">{{{gsx$desc.$t}}}</p>
        </div>

        <div class="modal-footer">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
        </div>
    </div>
{{/each}}